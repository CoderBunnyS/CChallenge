extends layout

block content
  .container
    h1 Edit Event

    form(action=`/events/${event.id}/edit` method="POST")
      .form-group
        label(for="name") Event Name
        input#name.form-control(type="text" name="name" value=event.name required)
      .form-group
        label(for="date") Date
        input#date.form-control(type="date" name="date" value=event.date required)
      .form-group
        label(for="location") Location
        input#location.form-control(type="text" name="location" value=event.location required)

      .button-container
        button(type="submit" class="btn btn-primary") Save Changes
        a(href=`/events/${event.id}` class="btn btn-secondary") Cancel
